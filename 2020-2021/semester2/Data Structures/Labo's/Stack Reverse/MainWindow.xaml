<Window x:Class="Stack_Reverse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Stack_Reverse"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="lb_input" HorizontalAlignment="Left" Margin="136,96,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152" Height="37"/>
        <Button x:Name="btn_reverse" Content="Reverse" HorizontalAlignment="Center" Margin="0,96,0,0" VerticalAlignment="Top" Height="37" Width="164" Click="btn_reverse_Click"/>
        <TextBox x:Name="tb_out" HorizontalAlignment="Left" Height="35" Margin="136,170,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="152"/>

    </Grid>
</Window>
